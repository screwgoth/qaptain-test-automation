# Qaptain Test Automation Platform - Environment Variables

# Backend
NODE_ENV=production
PORT=3000

# Database
DATABASE_URL=postgresql://qaptain:qaptain_dev_password@postgres:5432/qaptain_db

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# JWT Secrets (CHANGE IN PRODUCTION!)
JWT_SECRET=qaptain-jwt-secret-change-in-production
JWT_REFRESH_SECRET=qaptain-refresh-secret-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# CORS
CORS_ORIGIN=http://localhost

# Optional: Email notifications
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-password

# Optional: Slack notifications
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
